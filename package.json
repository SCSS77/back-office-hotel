{
  "name": "back-office-hotel",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build-css": "sass src/assets/css/styles.scss src/assets/css/styles.css --style=compressed && postcss src/assets/css/styles.css --output src/assets/css/styles.min.css",
    "watch-css": "sass --watch src/assets/css/styles.scss:src/assets/css/styles.css --style=compressed && postcss src/assets/css/styles.css --output src/assets/css/styles.min.css"
  },
  "devDependencies": {
    "cssnano": "^5.0.0",
    "postcss": "^8.0.0",
    "postcss-cli": "^10.0.0",
    "sass": "^1.0.0",
    "vite": "^6.0.5"
  }
}